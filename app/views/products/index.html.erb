<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
    <h2 class="full-width float-left mb10px fs18px fbold">
      <%= "#{@search}" unless @search.nil? %>
    </h2>
    <% if @prefixes.nil? || @prefixes.blank? %>
        <%# unless @products.nil? %>
        <% arr = [] %>
        <% @products.each do |l| %>
            <% arr << l.prefix_id %>
        <% end %>
        <% arr.uniq! %>


        <% arr.each do |k| %>
        <% a = Prefix.find(k) %>
        <% b = Product.where('prefix_id = ?', k) %>
        <article class="perprodStyleOut full-width float-left">
          <% b.each do |img| %>
              <% product_image(img.id).each do |pimg|  %>
                  <figure class="w23per float-left center-text">
                    <%= image_tag pimg.product_img, style: 'width: 175px'  %>
                  </figure>
              <% end %>
          <% end %>

        <aside class="w76per float-right">
          <table class="full-width float-left perprodStyle">
            <tbody class="full-width">
            <tr class="full-width" style="text-align: left;">
              <th class="full-width" colspan="4">
                <%= link_to a["prefix_#{get_loc}"], '#', class: 'all-inherit' %>
            </th>
            </tr>
            <% @products.each do |p|  %>
                <% if p.prefix_id == k %>
            <tr class="full-width">
              <td style="width: 300px">
                <a href="#" class="all-inherit"><%= link_to p.title_ge, product_path(p.id) %></a>
              </td>
              <td style="width: 100px; text-align: right;">
                <% if p.discount == 0 %>
                    <%= "#{p.price} #{t('products.show.currency')}" %>
                <% else %>
                      <span class="mt14px color-gray fs14px float-left stroke">
                        <%= "#{p.price} #{t('products.show.currency')}" %>
                      </span>
                    <%= "#{p.discount} #{t('products.show.currency')}" %>
                <% end %>
              </td>
              <td style="width: 178px; text-align: center;">
                <%= form_tag line_items_path(product_id: p.id), remote: true do %>
                    <span class="cartAddRem">
                        <button class="minus">-</button>
                      <%= text_field_tag 'quantity', 0, size: 1, class: 'quantity' %>
                      <button class="plus">+</button>
                        <span>რაოდ.</span>
                    </span>
                    <%= submit_tag '', class: 'buttCartSmall' %>
                <% end %>
              </td>
            </tr>
                <% end %>
                <% end %>
            </tbody>
            </table>
          </aside>
          </article>
        <% end %>
        <%# end %>

    <% else %>

    <% @prefixes.each do |prefix| %>
    <article class="perprodStyleOut full-width float-left">
        <% products = search_product_list(@search, prefix.pref_id) %>
        <% products.each do |img| %>
            <% product_image(img.id).each do |pimg|  %>
                <figure class="w23per float-left center-text">
                  <%= image_tag pimg.product_img, style: 'width: 175px'  %>
                </figure>
            <% end %>
        <% end %>
      <aside class="w76per float-right">
        <table class="full-width float-left perprodStyle">
          <tbody class="full-width">
          <tr class="full-width" style="text-align: left;">
            <th class="full-width" colspan="4">
              <%= link_to prefix["prefix_#{get_loc}"], product_path(prefix.pid), class: 'all-inherit' %>
            </th>
          </tr>
          <% products.each do |list| %>
          <tr class="full-width">
            <td style="width: 300px"><a href="#" class="all-inherit"><%= list["title_#{get_loc}"] %></a></td>
            <td style="width: 100px; text-align: right;">
              <% if list.discount == 0 %>
                  <%= "#{list.price} #{t('products.show.currency')}" %>
              <% else %>
                      <span class="mt14px color-gray fs14px float-left stroke">
                        <%= "#{list.price} #{t('products.show.currency')}" %>
                      </span>
                  <%= "#{list.discount} #{t('products.show.currency')}" %>
              <% end %>
            </td>
            <td style="width: 178px; text-align: center;">
              <%= form_tag line_items_path(product_id: list.id), remote: true do %>
                    <span class="cartAddRem">
                        <button class="minus">-</button>
                      <%= text_field_tag 'quantity', 0, size: 1, class: 'quantity' %>
                      <button class="plus">+</button>
                        <span>რაოდ.</span>
                    </span>
                  <%= submit_tag '', class: 'buttCartSmall' %>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </aside>
    </article>
    <% end %>
    <% end %>
        </section>
</section>
<% if @products.nil? %>
    <% flash.now[:notice] = 'Not found' %>
<% else %>
<%= paginate @products %>
<% end %>
