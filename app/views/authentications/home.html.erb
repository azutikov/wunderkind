<% if customer_signed_in? %>
    [<em><%= current_customer.email %></em>]
    <strong><%= current_customer.first_name %> <%= current_customer.last_name %></strong>
    <%= link_to 'Edit profile', edit_customer_registration_path %> |
    <%= link_to 'Authentications', authentications_path %> |
    <%= link_to "Logout", destroy_customer_session_path, method: :delete %>
<% else %>
    <%= link_to "Sign up", new_customer_registration_path %> |
    <%= link_to "Login", new_customer_session_path %>
    <li><%= link_to "Facebook", customer_omniauth_authorize_path(:facebook) %></li>
<% end %>