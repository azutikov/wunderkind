<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
    <h2 class="full-width float-left mb10px fs16px fbold">
      <%= @category["title_#{get_loc}"] %>
    </h2>

    <div class="full-width float-left mt10px">
    <% @subs.each do |sub| %>
    <div class="w30per paddinglr float-left mb10px mt14px">
        <h1 class="full-width color-blue fs18px mb10px float-left"><%= sub["title_#{get_loc}"]%></h1>
        <%= image_tag sub.sub_img.url(:medium), class: 'full-width mb10px float-left' %>
        <% @brands.each do |b| %>
          <div class="full-width float-left">
            <% if sub.id == b.sub_id %>
            <%= link_to "#{b["title_#{get_loc}"]} #{b.prod_quantity}", brand_path(b.id), class: 'color-gray fs14px borderbGray marpadstyle' %>
            <% end %>
          </div>
        <% end %>
     </div>
    <% end %>
    </div>
  </section>
</section>
