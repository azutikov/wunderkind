<% if @order.customer_id == current_customer.id  %>
<% payment_zone = PaymentZone.find(@order.payment_zone_id) %>
<% pay_type = PaymentMethod.find(@order.pay_type_id) %>

<section class="mt10px w76per float-right" id="main-section">
<h2 class="full-width float-left mt10px fs18px fbold">
კატეგორიის ან ბრენდის სახელი ჰია
<button id="print-invoice" class="standardButtonStyle" style="float: right;">ამობეჭდვა</button>
</h2>


<section class="full-width float-left mt10px" id="printable-content">
  <section style="float: left; width: 100%;border: 1px solid #000; margin-top: 24px; margin-bottom: 16px; position: relative; background: #e7e7e7;">
    <h2 style="margin: 0;padding: 10px 2%; font-size: 18px;border: 1px solid #000; background: #e7e7e7; position: absolute; top: -23px; left: 10px; display: block;">
      მაღაზიის მისამართი
    </h2>
    <p style="line-height: 20px; margin-top: 42px; padding: 0 2.5% 20px 2.5%; float: left; width: 95%;">
      <b><%= t('.store_name') %>: </b><%= meta_info.store_name %><br/>
      <b><%= t('.store_link') %>: </b>http://<%= request.host %><br/>
      <b><%= t('.store_phone') %>: </b><%= meta_info.store_email %><br/>
      <b><%= t('.store_phone') %>: </b><%= meta_info.store_phone %><br/>
      <b><%= t('.store_address') %>: </b><%= meta_info.store_address %><br/>
    </p>
  </section>
  <section style="float: left; width: 100%;border: 1px solid #000; margin-top: 24px; margin-bottom: 16px; position: relative; background: #e7e7e7;">
    <h2 style="margin: 0;padding: 10px 2%; font-size: 18px;border: 1px solid #000; background: #e7e7e7; position: absolute; top: -23px; left: 10px; display: block;">
      შეკვეთების დეტალები
    </h2>
    <p style="line-height: 20px; margin-top: 42px; padding: 0 2.5% 20px 2.5%; float: left; width: 95%;">
      <b><%= t('orders.id') %>: </b>#<%= @order.id %><br />
      <b><%= t('orders.invoice') %>: </b><%= @order.invoice %><br />
      <b><%= t('orders.order_date') %>: </b><%= @order.created_at.strftime("%Y/%m/%d") %><br />
      <b><%= t('.payment_method') %>: </b><%= pay_type["method_name_#{get_loc}"] %><br/>
    </p>
  </section>
  <section style="float: left; width: 100%;border: 1px solid #000; margin-top: 24px; margin-bottom: 16px; position: relative; background: #e7e7e7;">
    <h2 style="margin: 0;padding: 10px 2%; font-size: 18px;border: 1px solid #000; background: #e7e7e7; position: absolute; top: -23px; left: 10px; display: block;">
      მიმღების მისამართი
    </h2>
    <p style="line-height: 20px; margin-top: 42px; padding: 0 2.5% 20px 2.5%; float: left; width: 95%;">
      <b><%= t('.first_name') %>: </b><%=h @order.first_name %><br/>
      <b><%= t('.last_name') %>: </b><%=h @order.last_name %><br />
      <b><%= t('.phone') %>: </b><%=h @order.phone %><br />
      <b><%= t('.pid') %>: </b><%=h @order.pid %><br />
      <b><%= t('.payment_zone') %>: </b><%=h payment_zone["zone_name_#{get_loc}"] %><br />
      <b><%= t('.payment_address') %>: </b><%=h @order.payment_address %><br />
      <b><%= t('.zip_code') %>: </b><%=h @order.zip_code %><br />
    </p>
  </section>
  <section style="float: left; width: 100%;border: 1px solid #000; margin-top: 24px; margin-bottom: 16px; position: relative; background: #e7e7e7;">
    <h2 style="margin: 0;padding: 10px 2%; font-size: 18px;border: 1px solid #000; background: #e7e7e7; position: absolute; top: -23px; left: 10px; display: block;">
      შენაძენი
    </h2>
    <p style="line-height: 20px; margin-top: 42px; padding: 0 2.5% 20px 2.5%; float: left; width: 95%;">
      <% gel = t('products.show.currency') %>
      <% @order_products.each do |l| %>
          <% product = Product.find(l.product_id) %>
          <% prefix = Prefix.find(product.prefix_id) %>
        <b>
          <%= l.quantity  %> &times; <%= prefix["prefix_#{get_loc}"] %> <%= product["title_#{get_loc}"] %>
          <%= l.per_price %> <%= gel %>
          <%= l.total %> <%= gel %>
        </b><br />
    <% end %>
      <b><%= t('orders.sub_total') %>: </b>
      <% totals = [] %>
      <% @order_products.each { |op| totals << op.total } %>
      <%= totals.inject(:+) %> <%= gel %><br />
      <b><%=h payment_zone["zone_name_#{get_loc}"] %>: </b><%= town_delivery = payment_zone.delivery_price %> <%= gel %><br />
      <b><%= t('orders.total') %>: </b><span style="color: #cc0000;"><%= (totals.inject(:+) + town_delivery).to_f %> <%= gel %></span>
    </p>
  </section>
</section>
<% else %>
    <% flash.now[:error] = "Not found" %>
<% end %>
</section>