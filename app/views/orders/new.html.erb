<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
  <%= form_for @order, class: 'full-width float-left mt10px' do |f| %>
        <ul class="errornoteform">
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    <%= render "#{@order.current_step}_step", :f => f %>

    <div class="full-width float-left mt14px">
        <% if @order.first_step? %>
            <%= link_to t('carts.show.back'), @cart, style: 'margin-left: 2.3%', class: 'standardButtonStyle' %>
        <% else %>
            <%= f.submit t('carts.show.back'), name: 'back_button', style: 'margin-left: 2.3%', class: 'standardButtonStyle' unless @order.first_step? %>
        <% end %>
        <% if @order.last_step? %>
        <%= f.submit t('layouts.pay_submit'), style: 'float: right; margin-right: 2.3%', class: 'standardButtonStyle' %>
        <% else %>
        <%= f.submit t('layouts.continue'), style: 'float: right; margin-right: 2.3%', class: 'standardButtonStyle' %>
        <% end %>
    </div>
  <% end %>
    </section>
</section>
