<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
  <%= form_for @order, class: 'full-width float-left mt14px' do |f| %>
    <%= render "#{@order.current_step}_step", :f => f %>
    <% @order.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
    <% end %>

    <div class="full-width float-left mt14px">
        <% if @order.first_step? %>
            <%= link_to 'უკან დაბრუნება', @cart, style: 'margin-left: 2.3%', class: 'standardButtonStyle' %>
        <% else %>
            <%= f.submit 'უკან დაბრუნება', name: 'back_button', style: 'margin-left: 2.3%', class: 'standardButtonStyle' unless @order.first_step? %>
        <% end %>
      <%= f.submit 'გაგრძელება', style: 'float: right; margin-right: 2.3%', class: 'standardButtonStyle' %>
    </div>
  <% end %>
    </section>
</section>
