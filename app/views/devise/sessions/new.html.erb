<% if resource_name == :user %>
  <%= render :partial => 'devise/admin', :layout => false %>
<% else %>
<section class="mt10px w76per float-right" id="main-section">
    <section class="full-width float-left mt10px">
      <h2 class="full-width float-left mb10px fs18px fbold"><%= t('layouts.auth') %></h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: 'full-width float-left mt10px') do |f| %>
      <%= devise_error_messages! %>
        <div class="formfieldL">
        <%= f.label t('layouts.email') %>
            <%= f.text_field :email, :autofocus => true %>
        </div>
        <div class="formfieldL">
            <%= f.label t('layouts.password') %>
            <%= f.password_field :password %>
        </div>

          <% if devise_mapping.rememberable? -%>
              <div class="formfieldL">
                <%= f.check_box :remember_me, style: 'float: left' %> <%= f.label :remember_me, 'დამიმახსოვრე როგორც შემოსული' %>
              </div>
          <% end -%>

          <%= render 'devise/shared/links' %>
          <div style="clear: both; width: 100%;"></div>
        <div class="formfieldL">
          <%= link_to image_tag('fblogin-big.png', class: 'float-left'), customer_omniauth_authorize_path(:facebook) %>
        </div>
        <div class="formfieldL">
          <%= f.submit t('layouts.submit'), class: 'custom-float-right' %>
        </div>
    <% end %>
    </section>
</section>
<% end %>