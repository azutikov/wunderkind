<section class="mt10px w76per float-right" id="main-section">
    <section class="full-width float-left mt10px">
      <h2 class="full-width float-left mb10px fs18px fbold">ავტორიზაცია</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: 'full-width float-left mt10px') do |f| %>
        <div class="formfieldL">
        <span><%= f.label 'იმეილი:' %></span>
            <%= f.text_field :email, :autofocus => true %>
        </div>
        <div class="formfieldL">
            <span><%= f.label 'პაროლი:' %></span>
            <%= f.password_field :password %>
        </div>
        <div class="formfieldL">
          <%= link_to image_tag('fblogin-big.png', class: 'float-left'), customer_omniauth_authorize_path(:facebook) %>
        </div>
        <div class="formfieldL">
          <%= f.submit 'დასტური' %>
        </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

    <% end %>

    <%= render "devise/shared/links" %>
    </section>
</section>