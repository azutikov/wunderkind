<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
<h2 class="full-width float-left mb10px fs18px fbold">
  Edit <%= resource_name.to_s.humanize %>
</h2>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'full-width float-left mt10px', :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="formfieldL"><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div class="formfieldL"><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div class="formfieldL"><%= f.label :email %><br />
  <%= f.text_field :email %></div>
  <%# f.email_field :email, :autofocus => true %>

  <div class="formfieldL"><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>

    <div class="formfieldL"><%= f.label :pid %><br />
      <%= f.text_field :pid %></div>

    <div class="formfieldL"><%= f.label :address %><br />
        <%= f.text_field :address %></div>

    <div class="formfieldL"><%= f.label :zip_code %><br />
      <%= f.text_field :zip_code %></div>

    <div class="formfieldL"><%= f.label :payment_zone_id %>
      <%= f.select :payment_zone_id, PaymentZone.all.collect { |p| [p["zone_name_#{get_loc}"], p.id] } %></div>

    <div style="clear: both; width: 100%"></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div style="clear: both; width: 100%"></div>

  <% unless @customer.encrypted_password.empty? %>
  <div class="formfieldL edit-pass-remable" style="display: none"><%= f.label :password %>
  <%= f.password_field :password, :autocomplete => "off" %>
    <i>(leave blank if you don't want to change it)</i></div>

  <div class="formfieldL edit-pass-remable" style="display: none"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="formfieldL"><%= f.label :current_password %> <i>(enter current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>

  <div style="clear: both; width: 100%"></div>

  <div class="formfieldL">
    <button class="standardButtonStyle" id="edit-pass">პაროლის შეცვლა</button>
  </div>
  <% end %>

  <div class="formfieldL" style="float: right">
    <%= f.submit "დასტური", style: 'float: right' %>
  </div>
<% end %>

    </section>
</section>