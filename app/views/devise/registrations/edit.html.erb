<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
<h2 class="full-width float-left mb10px fs18px fbold">
  <%= t('layouts.edit_profile') %>
</h2>

<% span = content_tag(:span, "*", :style => "color:red; float:left;") %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'full-width float-left mt10px', :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="formfieldL"><%= span %><%= f.label t('layouts.first_name') %><br />
  <%= f.text_field :first_name %></div>

  <div class="formfieldL"><%= span %><%= f.label t('layouts.last_name') %><br />
  <%= f.text_field :last_name %></div>

  <div class="formfieldL"><%= span %><%= f.label t('layouts.email') %><br />
  <%= f.text_field :email %></div>
  <%# f.email_field :email, :autofocus => true %>

  <div class="formfieldL"><%= span %><%= f.label t('layouts.phone') %><br />
  <%= f.text_field :phone %></div>

    <div class="formfieldL"><%= span %><%= f.label t('layouts.pid') %><br />
      <%= f.text_field :pid %></div>

    <div class="formfieldL"><%= span %><%= f.label t('layouts.address') %><br />
        <%= f.text_field :address %></div>

    <!-- <div class="formfieldL"><%# f.label t('layouts.zip_code') %><br /><%# f.text_field :zip_code %></div> -->

    <div class="formfieldL"><%= span %><%= f.label t('layouts.payment_zone') %>
      <%= f.select :payment_zone_id, PaymentZone.all.collect { |p| [p["zone_name_#{get_loc}"], p.id] } %></div>

    <div style="clear: both; width: 100%"></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div style="clear: both; width: 100%"></div>

  <% unless @customer.encrypted_password.empty? %>
  <div class="formfieldL edit-pass-remable" style="display: none"><%= f.label t('layouts.password') %>
  <%= f.password_field :password, :autocomplete => "off" %>
    <i><%= t('layouts.leave_blank') %></i></div>

  <div class="formfieldL edit-pass-remable" style="display: none"><%= f.label t('layouts.password_conf') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="formfieldL"><%= span %><%= f.label t('layouts.current_password2') %> <i><%= t('layouts.current_password') %></i><br />
  <%= f.password_field :current_password %></div>

  <div style="clear: both; width: 100%"></div>

  <div class="formfieldL">
    <button class="standardButtonStyle" id="edit-pass"><%= t('layouts.password_button') %></button>
  </div>
  <% end %>

  <div class="formfieldL" style="float: right">
    <%= f.submit t('layouts.submit'), style: 'float: right' %>
  </div>
<% end %>

    </section>
</section>