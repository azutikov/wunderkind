<section class="mt10px w76per float-right" id="main-section">
    <section class="full-width float-left mt10px">
      <h2 class="full-width float-left mb10px fs18px fbold">
		<%= t('layouts.change_password') %>
	  </h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="formfieldL"><%= f.label :password, t('layouts.new_password') %><br />
  <%= f.password_field :password, :autofocus => true %></div>

  <div class="formfieldL"><%= f.label :password_confirmation, t('layouts.password_conf') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="formfieldL">
  	<%= link_to t('layouts.sign_in'), new_customer_session_path %>
  </div>
  <div class="formfieldL">
  <%= f.submit t('layouts.change_password'), class: 'custom-float-right' %>
  </div>
<% end %>

<%# render "devise/shared/links" %>
    </section>
</section>