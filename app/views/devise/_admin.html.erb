<section class="mt10px w76per float-right" id="main-section">
  <section class="full-width float-left mt10px">
    <h2 class="full-width float-left mb10px fs18px fbold">ავტორიზაცია</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: 'full-width float-left mt10px') do |f| %>
        <div class="formfieldL">
          <%= f.label 'იმეილი:' %>
          <%= f.text_field :email, :autofocus => true %>
        </div>
        <div class="formfieldL">
          <%= f.label 'პაროლი:' %>
          <%= f.password_field :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="formfieldL">
              <%= f.check_box :remember_me, style: 'float: left' %> <%= f.label :remember_me, 'დამიმახსოვრე როგორც შემოსული' %>
            </div>
        <% end -%>


        <div class="formfieldL">
          <%= f.submit 'დასტური', class: 'custom-float-right' %>
        </div>
    <% end %>
  </section>
</section>